        System.exit(0);
    }                                           

    private void jButtonClearActionPerformed(java.awt.event.ActionEvent evt) {                                             
        // TODO add your handling code here:
        jTextFieldmilestone1.setText("");
        jTextFieldmilestone2.setText("");
        jTextFieldoverallGrade.setText("");
        jTextFieldstudentName.setText("");
        jTextFieldstudentNumber.setText("");
        jTextFieldterminalAssessment.setText("");
        jTextFieldoverallGrade.setBackground(Color.pink);
    }                                            

    private void jButtonCalculateActionPerformed(java.awt.event.ActionEvent evt) {                                                 
        // TODO add your handling code here:
        try {
            String studentName = jTextFieldstudentName.getText();
            String studentNumber = jTextFieldstudentNumber.getText();
             // Validate studentName: should only contain letters
            if (!studentName.matches("[a-zA-Z]+")) {
                JOptionPane.showMessageDialog(this, "Please enter a valid student name (letters only).", "Input Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            // Validate studentNumber: should only contain numbers
            if (!studentNumber.matches("\\d+")) {
                JOptionPane.showMessageDialog(this, "Please enter a valid student number (numbers only).", "Input Error", JOptionPane.ERROR_MESSAGE);
                return;
            }
            
            if (studentName.isEmpty() || studentNumber.isEmpty()) {
                JOptionPane.showMessageDialog(this, "Please enter student name and number", "Input Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            int milestone1 = Integer.parseInt(jTextFieldmilestone1.getText());
            int milestone2 = Integer.parseInt(jTextFieldmilestone2.getText());
            int terminalAssessment = Integer.parseInt(jTextFieldterminalAssessment.getText());

            if (milestone1 < 0 || milestone1 > 25 || milestone2 < 0 || milestone2 > 40 || terminalAssessment < 0 || terminalAssessment > 35) {
                JOptionPane.showMessageDialog(this, "Please enter valid grades.", "Input Error", JOptionPane.ERROR_MESSAGE);
                return;
            }

            int overallGrade = (milestone1 + milestone2 + terminalAssessment);
            jTextFieldoverallGrade.setText(String.valueOf(overallGrade));

        } 
        catch (NumberFormatException e) {
            JOptionPane.showMessageDialog(this, "Please enter valid numeric grades.", "Input Error", JOptionPane.ERROR_MESSAGE);
        }
    }                                                

